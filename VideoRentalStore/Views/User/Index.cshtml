
@{
    ViewBag.Title = "Users Lisy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>

<table id="userTable">
    <thead>
        <tr>
            <td>#</td>
            <td>Image</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Phone No.</td>
            <td>User Name</td>
            <td>Password</td>
            <td>Address</td>
            <td>Country</td>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<link href="https://cdn.datatables.net/1.11.0/css/jquery.dataTables.min.css" rel="stylesheet" />

@section script{
    <script src="https://cdn.datatables.net/1.11.0/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "ajax": {
                    "url": "/User/Index",
                    "type": "GET",
                    "datatype":"json"
                },
                "columns": [
                    {"data": "FirstName"},
                    {"data": "LastName"},
                    {"data": "Email"},
                    {"data": "PhoneNo"},
                    {"data": "UserName"},
                    {"data": "Password"},
                    {"data": "Image"},
                    {"data": "Address"},
                    {"data": "Country"},
                ]
            });
        });
    </script>
    }